<Window
    x:Class="FYP_Management.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    xmlns:uc="clr-namespace:FYP_Management.Views.Students"
    Title="Final Year Project Management System"
    Width="1250"
    Height="620"
    MinWidth="800"
    MinHeight="400"
    Background="White"
    FontFamily="Poppins"
    FontSize="14"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="Background Color" Color="#2C3E50" />
        <SolidColorBrush x:Key="Light Theme Text Color" Color="#ECF0F1" />
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!--  SIDE PANEL  -->
        <StackPanel
            Width="240"
            Background="{StaticResource Background Color}"
            DockPanel.Dock="Left">

            <!--  Header  -->
            <TextBlock
                Margin="0,40,0,5"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="Welcome To"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,0,0,5"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="Final Year Project"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,0,0,20"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Management System"
                TextAlignment="Center" />

            <!--  Menu Buttons  -->
            <Button
                x:Name="StuBtn"
                Margin="10,5"
                Click="StuBtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="Users" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Students" />
                </StackPanel>
            </Button>
            <Button
                x:Name="AdvBtn"
                Margin="10,5"
                Click="AdvBtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="UserTie" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Advisors" />
                </StackPanel>
            </Button>
            <Button
                x:Name="Projectbtn"
                Margin="10,5"
                Click="Projectbtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="Edit" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Projects" />
                </StackPanel>
            </Button>
            <Button
                x:Name="GroupManagebtn"
                Margin="10,5"
                Click="GroupManagebtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="List" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Group" />
                </StackPanel>
            </Button>
            <Button
                x:Name="AssignProjectbtn"
                Margin="10,5"
                Click="AssignProjectbtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="Plus" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Group Project" />
                </StackPanel>
            </Button>
            <Button
                x:Name="EvalutionBtn"
                Margin="10,5"
                Click="EvalutionBtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="CheckCircle" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Evaluations" />
                </StackPanel>
            </Button>
            <Button
                x:Name="GroupEvaluation"
                Margin="10,5"
                Click="GroupEvaluation_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="LineChart" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Group Evaluation" />
                </StackPanel>
            </Button>

            <Button
                x:Name="UsersBtn"
                Margin="10,5"
                Click="UsersBtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="UserCog" />
                    <TextBlock VerticalAlignment="Center" Text="Manage Users" />
                </StackPanel>
            </Button>

            <Button
                x:Name="DashboardBtn"
                Margin="10,5"
                Click="DashboardBtn_Click"
                Style="{StaticResource Btntype1}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock
                        Width="16"
                        Height="16"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Icon="ChartSimple" />
                    <!--  Or ChartLine, ChartPie  -->
                    <TextBlock VerticalAlignment="Center" Text="Dashboard / Reports" />
                </StackPanel>
            </Button>

        </StackPanel>

        <!--  MAIN CONTENT AREA  -->
        <Grid x:Name="mainField" Background="{StaticResource Light Theme Text Color}">
            <uc:StudentMainView />
        </Grid>
    </DockPanel>
</Window>
