<Window
    x:Class="FYP_MS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:FYP_MS.Views.Students"
    Title="Final Year Project Management System"
    Width="1200"
    Height="550"
    MinWidth="800"
    MinHeight="400"
    Background="White"
    FontFamily="Poppins"
    FontSize="14"
    WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">

        <!--  SIDE PANEL  -->
        <StackPanel
            Width="220"
            Background="{StaticResource Background Color}"
            DockPanel.Dock="Left">

            <!--  Header  -->
            <TextBlock
                Margin="0,20,0,5"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="Final Year Project"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,0,0,20"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Management System"
                TextAlignment="Center" />

            <!--  Menu Buttons  -->
            <Button
                x:Name="StuBtn"
                Margin="10,5"
                Click="StuBtn_Click"
                Content="Manage Students"
                Style="{StaticResource Btntype1}" />
            <Button
                x:Name="AdvBtn"
                Margin="10,5"
                Click="AdvBtn_Click"
                Content="Manage Advisors"
                Style="{StaticResource Btntype1}" />
            <Button
                x:Name="Projectbtn"
                Margin="10,5"
                Click="Projectbtn_Click"
                Content="Manage Projects"
                Style="{StaticResource Btntype1}" />
            <Button
                x:Name="GroupManagebtn"
                Margin="10,5"
                Click="GroupManagebtn_Click"
                Content="Manage Group"
                Style="{StaticResource Btntype1}" />
            <Button
                x:Name="AssignProjectbtn"
                Margin="10,5"
                Click="AssignProjectbtn_Click"
                Content="Manage Group Project"
                Style="{StaticResource Btntype1}" />
            <Button
                x:Name="EvalutionBtn"
                Margin="10,5"
                Click="EvalutionBtn_Click"
                Content="Manage Evaluations"
                Style="{StaticResource Btntype1}" />
            <Button
                x:Name="GroupEvaluation"
                Margin="10,5"
                Click="GroupEvaluation_Click"
                Content="Manage Group Evaluation"
                Style="{StaticResource Btntype1}" />

            <!--  Settings at bottom  -->
            <StackPanel Margin="0,20,0,10" VerticalAlignment="Bottom">
                <Button
                    Margin="10,5"
                    Content="Settings"
                    Style="{StaticResource Btntype1}" />
            </StackPanel>
        </StackPanel>

        <!--  MAIN CONTENT AREA  -->
        <Grid x:Name="mainField" Background="{StaticResource Light Theme Text Color}">
            <uc:StudentMainView />
        </Grid>
    </DockPanel>
</Window>
