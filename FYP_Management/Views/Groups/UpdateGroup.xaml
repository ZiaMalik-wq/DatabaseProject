<Window
    x:Class="FYP_Management.Views.Groups.UpdateGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Group"
    Width="800"
    Height="400"
    MinWidth="800"
    MinHeight="400"
    AllowsTransparency="True"
    BorderBrush="Transparent"
    BorderThickness="10"
    FontFamily="Poppins"
    FontSize="14"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <!--  Drop shadow around the window  -->
    <Window.Effect>
        <DropShadowEffect
            BlurRadius="15"
            Direction="-90"
            RenderingBias="Quality"
            ShadowDepth="5"
            Color="Black" />
    </Window.Effect>

    <!--  Root Grid: 2 rows x 3 columns  -->
    <Grid Margin="10" Background="{StaticResource Light Theme Text Color}">
        <Grid.RowDefinitions>
            <!--  Row 0: Toolbar  -->
            <RowDefinition Height="Auto" />
            <!--  Row 1: Content (DataGrids + buttons)  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!--  Column 0: All Students  -->
            <ColumnDefinition Width="*" />
            <!--  Column 1: Arrows  -->
            <ColumnDefinition Width="Auto" />
            <!--  Column 2: Selected Students  -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--
            ========================
            Row 0: Top Toolbar
            ========================
        -->
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Margin="0,0,0,10"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <!--  Search Label & Box  -->
            <Label
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Content="Search" />
            <TextBox
                x:Name="SearchBar"
                Width="150"
                MinHeight="30"
                Margin="0,0,10,0"
                Padding="6,4"
                Background="White"
                BorderBrush="#CCC"
                BorderThickness="1"
                TextChanged="SearchBar_TextChanged" />

            <!--  Clear Text Button  -->
            <Button
                Margin="0,0,20,0"
                Click="ClearTxt_Click"
                Content="Clear Text"
                Style="{StaticResource Btntype1}" />

            <!--  DatePicker  -->
            <Label
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Content="Date:" />
            <DatePicker
                x:Name="Datepicker"
                Width="140"
                MinHeight="30"
                Margin="0,0,20,0" />

            <!--  Spacer to push Save/Cancel to right  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="SaveBtn_Click"
                    Content="Save"
                    Style="{StaticResource donebtn}" />
                <Button
                    Width="80"
                    Height="30"
                    Click="CancelBtn_Click"
                    Content="Cancel"
                    Style="{StaticResource cancelbtn}" />
            </StackPanel>
        </StackPanel>

        <!--
            ========================
            Row 1, Column 0: All Students DataGrid
            ========================
        -->
        <DataGrid
            x:Name="AllStudents"
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,0"
            AlternatingRowBackground="{StaticResource Light Theme Text Color}"
            AutoGenerateColumns="True"
            Background="LightGray"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            MouseDoubleClick="UpdateStudentBtnClick"
            RowBackground="LightYellow"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto" />

        <!--
            ========================
            Row 1, Column 1: Arrow Buttons
            ========================
        -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <Button
                x:Name="AddStuToGroupBtn"
                Width="30"
                Height="30"
                Margin="0,0,0,10"
                Click="UpdateStudentBtnClick"
                Content="&gt;"
                Style="{StaticResource Btntype2}" />

            <Button
                x:Name="RemoveStuFromGroupBtn"
                Width="30"
                Height="30"
                Click="RemoveStu"
                Content="&lt;"
                Style="{StaticResource Btntype2}" />
        </StackPanel>

        <!--
            ========================
            Row 1, Column 2: Selected Students DataGrid
            ========================
        -->
        <DataGrid
            x:Name="SelectedStudents"
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,0,0,0"
            AlternatingRowBackground="{StaticResource Light Theme Text Color}"
            AutoGenerateColumns="False"
            Background="LightGray"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            MouseDoubleClick="RemoveStu"
            RowBackground="LightYellow"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto">

            <!--  Explicit Columns  -->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding id}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FirstName}"
                    Header="First Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LastName}"
                    Header="Last Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding RegistrationNo}"
                    Header="Reg No" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
