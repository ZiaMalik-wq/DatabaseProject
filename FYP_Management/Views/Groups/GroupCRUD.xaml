<UserControl
    x:Class="FYP_Management.GroupCRUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FYP_Management"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel Background="AliceBlue">
        <WrapPanel DockPanel.Dock="Top">
            <Label Margin="10,10,0,10" Content="Search" />
            <TextBox
                Name="SearchBar"
                Width="200"
                Height="20"
                Margin="5"
                TextChanged="SearchBar_TextChanged" />
            <Button
                Width="70"
                Margin="5"
                Click="ClearTxt_Click"
                Content="Clear Text"
                Style="{StaticResource Btntype1}" />
            <Button
                Width="90"
                Margin="5"
                Click="AddGroup_Click"
                Content="Create Group"
                Style="{StaticResource Btntype1}" />
            <Button
                Width="100"
                Margin="5"
                Click="UpdateGroup_Click"
                Content="Update Group"
                Style="{StaticResource Btntype1}" />
        </WrapPanel>
        <DataGrid
            x:Name="Grid"
            Grid.Row="1"
            MaxHeight="300"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AlternatingRowBackground="{StaticResource Light Theme Text Color}"
            Background="LightGray"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            ColumnWidth="*"
            DockPanel.Dock="Top"
            IsReadOnly="True"
            MouseDoubleClick="Grid_MouseDoubleClick"
            RowBackground="LightYellow" />
        <DataGrid
            x:Name="StudentsGrid"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AlternatingRowBackground="{StaticResource Light Theme Text Color}"
            Background="LightGray"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            ColumnWidth="*"
            IsReadOnly="True"
            RowBackground="LightYellow" />
    </DockPanel>
</UserControl>
