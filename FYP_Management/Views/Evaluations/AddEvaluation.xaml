<Window
    x:Class="FYP_Management.AddEvaluation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FYP_Management"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Stu Edit"
    Width="500"
    Height="190"
    d:DesignHeight="190"
    d:DesignWidth="500"
    AllowsTransparency="True"
    BorderBrush="Transparent"
    BorderThickness="10"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Effect>
        <DropShadowEffect
            BlurRadius="15"
            Direction="-90"
            RenderingBias="Quality"
            ShadowDepth="5"
            Color="Black" />
    </Window.Effect>

    <Canvas Background="{StaticResource Light Theme Text Color}">
        <Label
            Canvas.Top="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Evaluation Name" />
        <TextBox
            x:Name="EvlName"
            Canvas.Left="137"
            Canvas.Top="31"
            Width="324"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            MaxLength="100" />
        <Label
            Canvas.Left="213"
            Canvas.Top="76"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Total Wightage" />
        <TextBox
            x:Name="TotalMarks"
            Canvas.Left="105"
            Canvas.Top="77"
            Width="108"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            MaxLength="11"
            PreviewTextInput="TotalMarks_PreviewTextInput"
            Text="" />
        <Label
            Canvas.Left="10"
            Canvas.Top="85"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Total Marks" />
        <TextBox
            x:Name="WeightAgetxtbox"
            Canvas.Left="325"
            Canvas.Top="77"
            Width="135"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            MaxLength="12"
            PreviewTextInput="WeightAgetxtbox_PreviewTextInput"
            TextWrapping="Wrap" />
        <Button
            x:Name="donebtn"
            Canvas.Left="258"
            Canvas.Top="125"
            Width="74"
            Height="35"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Donebtn_Click"
            Content="Save"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource donebtn}" />
        <Button
            Canvas.Left="165"
            Canvas.Top="125"
            Width="74"
            Height="35"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Cancel_Click"
            Content="Cancel"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource cancelbtn}" />
    </Canvas>
</Window>
