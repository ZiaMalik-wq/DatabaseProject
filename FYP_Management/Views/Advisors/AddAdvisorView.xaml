<Window
    x:Class="FYP_Management.Views.Advisors.AddAdvisorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Advisor"
    Width="500"
    Height="300"
    AllowsTransparency="True"
    BorderBrush="Transparent"
    FontFamily="Poppins"
    FontSize="14"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <SolidColorBrush x:Key="LightThemeTextColor" Color="#FFFFFF" />
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect
            BlurRadius="15"
            Direction="-90"
            RenderingBias="Quality"
            ShadowDepth="5"
            Color="Black" />
    </Window.Effect>

    <Grid Margin="10" Background="{StaticResource LightThemeTextColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Row 0  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Content="First Name" />
        <TextBox
            x:Name="FirstName"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            Margin="5"
            TextChanged="FirstName_TextChanged" />

        <Label
            Grid.Row="0"
            Grid.Column="2"
            Margin="20,5,0,5"
            VerticalAlignment="Center"
            Content="Last Name" />
        <TextBox
            x:Name="LastName"
            Grid.Row="0"
            Grid.Column="3"
            Width="120"
            Margin="5" />

        <!--  Row 1  -->
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Content="Contact No." />
        <TextBox
            x:Name="ContactNo"
            Grid.Row="1"
            Grid.Column="1"
            Width="120"
            Margin="5" />

        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="20,5,0,5"
            VerticalAlignment="Center"
            Content="Designation" />
        <ComboBox
            x:Name="DesignationCmBox"
            Grid.Row="1"
            Grid.Column="3"
            Width="120"
            Margin="5" />

        <!--  Row 2  -->
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Content="Email" />
        <TextBox
            x:Name="Email"
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            Margin="5" />

        <Label
            Grid.Row="2"
            Grid.Column="2"
            Margin="20,5,0,5"
            VerticalAlignment="Center"
            Content="Gender" />
        <ComboBox
            x:Name="CmboxGender"
            Grid.Row="2"
            Grid.Column="3"
            Width="120"
            Margin="5" />

        <!--  Row 3  -->
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Content="D.O.B" />
        <DatePicker
            x:Name="DatePicker"
            Grid.Row="3"
            Grid.Column="1"
            Width="120"
            Margin="5" />

        <Label
            Grid.Row="3"
            Grid.Column="2"
            Margin="20,5,0,5"
            VerticalAlignment="Center"
            Content="Salary" />
        <TextBox
            x:Name="Salarytxtbox"
            Grid.Row="3"
            Grid.Column="3"
            Width="120"
            Margin="5"
            PreviewTextInput="Salarytxtbox_PreviewTextInput" />

        <!--  Row 4: Buttons  -->
        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="4"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="donebtn"
                Width="75"
                Height="30"
                Margin="5"
                Click="donebtn_Click"
                Content="Save"
                Style="{StaticResource donebtn}" />
            <Button
                x:Name="cancelbtn"
                Width="75"
                Height="30"
                Margin="5"
                Click="Close_Click"
                Content="Cancel"
                Style="{StaticResource cancelbtn}" />
        </StackPanel>
    </Grid>
</Window>
