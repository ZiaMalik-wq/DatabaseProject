<UserControl
    x:Class="FYP_Management.ProjectCRUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel Background="AliceBlue">
        <Grid DockPanel.Dock="Top">
            <!--  toolbar row + data grid row  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Toolbar  -->
            <WrapPanel
                MinHeight="50"
                Margin="0,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                <Label Margin="10,0" Content="Search" />

                <TextBox
                    x:Name="SearchBar"
                    Width="200"
                    MinHeight="30"
                    Margin="5"
                    Padding="6,4"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    Style="{x:Null}"
                    TextChanged="SearchBar_TextChanged" />

                <!--  Action Buttons  -->
                <Button
                    Margin="5"
                    Click="ClearBtn_Click"
                    Content="Clear Text"
                    Style="{StaticResource Btntype1}" />
                <Button
                    Margin="5"
                    Click="AddProject_Click"
                    Content="Add Project"
                    Style="{StaticResource Btntype1}" />
                <Button
                    Margin="5"
                    Click="UpdateProject_Click"
                    Content="Update Project"
                    Style="{StaticResource Btntype1}" />
            </WrapPanel>

            <!--  DataGrid with wrapping + scrollbars  -->
            <DataGrid
                x:Name="Grid"
                Grid.Row="1"
                Margin="5"
                AlternatingRowBackground="#F7F7F7"
                AutoGenerateColumns="False"
                Background="#F0F8FF"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True"
                MouseDoubleClick="UpdateProject_Click"
                RowBackground="White"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionChanged="Grid_SelectionChanged">

                <!--  Ensure each row auto-sizes for wrapped text  -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="VerticalAlignment" Value="Top" />
                    </Style>
                </DataGrid.RowStyle>

                <!--  Explicit columns with wrapping ElementStyles  -->
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Id}"
                        Header="ID" />

                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Title}"
                        Header="Title">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="Margin" Value="4,2" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="3*"
                        Binding="{Binding Description}"
                        Header="Description">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="Margin" Value="4,2" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--  add other columns here  -->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
