<Window
    x:Class="FYP_Management.AddAssignProject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Assign Project to Group"
    Width="1050"
    Height="650"
    MinWidth="900"
    MinHeight="600"
    MaxWidth="1100"
    MaxHeight="700"
    AllowsTransparency="True"
    BorderBrush="Transparent"
    BorderThickness="10"
    FontFamily="Poppins"
    FontSize="12"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Effect>
        <DropShadowEffect
            BlurRadius="15"
            Direction="-90"
            RenderingBias="Quality"
            ShadowDepth="5"
            Color="Black" />
    </Window.Effect>

    <Grid Margin="10" Background="{StaticResource Light Theme Text Color}">
        <Grid.Resources>
            <Style TargetType="DataGridRow">
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#FFCCE5FF" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Margin="10,0,5,0"
                VerticalAlignment="Center"
                Content="Enter Project Name:" />
            <TextBox
                x:Name="SearchBar"
                Grid.Column="1"
                Width="240"
                MinHeight="28"
                Padding="6,4"
                Background="White"
                BorderBrush="#CCC"
                BorderThickness="1"
                TextChanged="SearchBar_TextChanged" />
            <Button
                Grid.Column="2"
                Margin="10,0"
                Click="Button_Click"
                Content="Clear"
                Style="{StaticResource Btntype1}" />
            <StackPanel
                Grid.Column="3"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="CloseBtn_Click"
                    Content="Cancel"
                    Style="{StaticResource cancelbtn}" />
                <Button
                    x:Name="AssignBtn"
                    Width="130"
                    Height="30"
                    Click="AssignBtn_Click"
                    Content="Assign Project"
                    Style="{StaticResource Btntype1}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    Margin="5,0"
                    Content="Select Group"
                    FontSize="12"
                    FontWeight="SemiBold" />
                <DataGrid
                    x:Name="GroupGrid"
                    Grid.Row="1"
                    Margin="5,5,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="GroupGrid_SelectionChanged"
                    SelectionMode="Single"
                    SelectionUnit="FullRow" />
                <Label
                    Grid.Row="2"
                    Margin="5,10,5,0"
                    Content="Group Members"
                    FontSize="12"
                    FontWeight="SemiBold" />
                <DataGrid
                    x:Name="GroupMembersGrid"
                    Grid.Row="3"
                    Margin="5,5,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionUnit="FullRow" />
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="0,0,0,5"
                    VerticalAlignment="Center">
                    <Label
                        Margin="5,0,5,0"
                        Content="Select Project"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="SemiBold" />
                    <Label
                        Margin="0,0,5,0"
                        Content="Assignment Date"
                        DockPanel.Dock="Right"
                        FontSize="12" />
                    <DatePicker
                        x:Name="Datepicker"
                        Width="140"
                        MinHeight="28"
                        Margin="0,0,10,0"
                        DockPanel.Dock="Right"
                        FontSize="11" />
                </DockPanel>
                <DataGrid
                    x:Name="ProjectGrid"
                    Grid.Row="1"
                    Margin="5,0,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="ProjectGrid_SelectionChanged"
                    SelectionMode="Single"
                    SelectionUnit="FullRow" />
                <Label
                    Grid.Row="2"
                    Margin="5,10,5,0"
                    Content="Selected Project"
                    FontSize="12"
                    FontWeight="SemiBold" />
                <DataGrid
                    x:Name="SelectedProjectGrid"
                    Grid.Row="3"
                    Margin="5,5,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionUnit="FullRow" />
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="5"
                    VerticalAlignment="Center">
                    <Label
                        Margin="0,0,5,0"
                        Content="Main Advisor"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="SemiBold" />
                    <TextBox
                        x:Name="searchMainAdvbox"
                        Width="140"
                        MinHeight="28"
                        Margin="0,0,5,0"
                        Padding="6,4"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        DockPanel.Dock="Left"
                        FontSize="11"
                        TextChanged="searchMainAdvbox_TextChanged" />
                    <Button
                        Width="75"
                        Height="28"
                        Click="Button_Click_1"
                        Content="Clear"
                        DockPanel.Dock="Left"
                        FontSize="11"
                        Style="{StaticResource Btntype2}" />
                </DockPanel>
                <DataGrid
                    x:Name="MainAdvGrid"
                    Grid.Row="1"
                    Margin="5,0,5,5"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="MainAdvGrid_SelectionChanged"
                    SelectionMode="Single"
                    SelectionUnit="FullRow" />
                <Label
                    Grid.Row="2"
                    Margin="5,10,5,0"
                    Content="Selected Main Advisor"
                    FontSize="12"
                    FontWeight="SemiBold" />
                <DataGrid
                    x:Name="SelectedMainAdvGrid"
                    Grid.Row="3"
                    Margin="5,5,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    RowHeaderWidth="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionUnit="FullRow" />
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="5"
                    VerticalAlignment="Center">
                    <Label
                        Margin="0,0,5,0"
                        Content="Co Advisor"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="SemiBold" />
                    <TextBox
                        x:Name="searchCoAdvbox"
                        Width="140"
                        MinHeight="28"
                        Margin="0,0,5,0"
                        Padding="6,4"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        DockPanel.Dock="Left"
                        FontSize="11"
                        TextChanged="searchCoAdvbox_TextChanged" />
                    <Button
                        Width="75"
                        Height="28"
                        Click="Button_Click_2"
                        Content="Clear"
                        DockPanel.Dock="Left"
                        FontSize="11"
                        Style="{StaticResource Btntype2}" />
                </DockPanel>
                <DataGrid
                    x:Name="coAdvGrid"
                    Grid.Row="1"
                    Margin="5,0,5,5"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="CoAdvGrid_SelectionChanged"
                    SelectionMode="Single"
                    SelectionUnit="FullRow" />
                <Label
                    Grid.Row="2"
                    Margin="5,10,5,0"
                    Content="Selected Co Advisor"
                    FontSize="12"
                    FontWeight="SemiBold" />
                <DataGrid
                    x:Name="SelectedCoAdvGrid"
                    Grid.Row="3"
                    Margin="5,5,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionUnit="FullRow" />
            </Grid>

            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DockPanel
                    Grid.Row="0"
                    Margin="5"
                    VerticalAlignment="Center">
                    <Label
                        Margin="0,0,5,0"
                        Content="Industry Advisor"
                        DockPanel.Dock="Left"
                        FontSize="12"
                        FontWeight="SemiBold" />
                    <TextBox
                        x:Name="IndustryAdvSearchbox"
                        Width="140"
                        MinHeight="28"
                        Margin="0,0,5,0"
                        Padding="6,4"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        DockPanel.Dock="Left"
                        FontSize="11"
                        TextChanged="IndustryAdvSearchbox_TextChanged" />
                    <Button
                        Width="75"
                        Height="28"
                        Click="Button_Click_3"
                        Content="Clear"
                        DockPanel.Dock="Left"
                        FontSize="11"
                        Style="{StaticResource Btntype2}" />
                </DockPanel>
                <DataGrid
                    x:Name="IndAdvGrid"
                    Grid.Row="1"
                    Margin="5,0,5,5"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionChanged="IndustryAdvGrid_SelectionChanged"
                    SelectionMode="Single"
                    SelectionUnit="FullRow" />
                <Label
                    Grid.Row="2"
                    Margin="5,10,5,0"
                    Content="Selected Industry Advisor"
                    FontSize="12"
                    FontWeight="SemiBold" />
                <DataGrid
                    x:Name="SelectedIndAdvGrid"
                    Grid.Row="3"
                    Margin="5,5,5,0"
                    AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                    AutoGenerateColumns="True"
                    Background="LightGray"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    FontSize="11"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowBackground="LightYellow"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionUnit="FullRow" />
            </Grid>
        </Grid>
    </Grid>
</Window>
