<UserControl
    x:Class="FYP_Management.AssignProjectCRUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FYP_Management"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel Background="AliceBlue" LastChildFill="True">
        <Grid
            Cursor="Hand"
            DockPanel.Dock="Top"
            UseLayoutRounding="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <WrapPanel>
                <Label Margin="10,10,0,10" Content="Search" />
                <TextBox
                    x:Name="SearchBar"
                    Width="200"
                    Height="20"
                    Margin="5"
                    TextChanged="SearchBar_TextChanged" />
                <Button
                    x:Name="clearTxt"
                    Width="70"
                    Margin="5"
                    Click="ClearTxt_Click"
                    Content="Clear Text"
                    Style="{StaticResource Btntype1}" />
                <Button
                    x:Name="AssignProjectBtn"
                    Width="80"
                    Margin="5"
                    Click="AssignProjectBtn_Click"
                    Content="Assign Project"
                    Style="{StaticResource Btntype1}" />
            </WrapPanel>

            <DataGrid
                x:Name="Grid"
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                Background="LightGray"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                ColumnWidth="*"
                IsReadOnly="True"
                RowBackground="LightYellow" />
        </Grid>
    </DockPanel>
</UserControl>
