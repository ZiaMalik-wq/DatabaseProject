<Window
    x:Class="FYP_Management.AddProject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FYP_Management"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Stu Edit"
    Width="520"
    Height="260"
    d:DesignWidth="500"
    AllowsTransparency="True"
    BorderBrush="Transparent"
    BorderThickness="10"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--    -->


    <Window.Effect>
        <DropShadowEffect
            BlurRadius="15"
            Direction="-90"
            RenderingBias="Quality"
            ShadowDepth="5"
            Color="Black" />
    </Window.Effect>

    <Canvas Background="{StaticResource Light Theme Text Color}">
        <Label
            Canvas.Left="38"
            Canvas.Top="23"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Topic" />
        <TextBox
            x:Name="TopicTxtBox"
            Canvas.Left="98"
            Canvas.Top="27"
            Width="180"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            MaxLength="50"
            TextWrapping="NoWrap" />
        <Label
            Canvas.Left="39"
            Canvas.Top="63"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Desription" />
        <TextBox
            Name="DescriptionTextBox"
            Canvas.Left="43"
            Canvas.Top="96"
            Width="421"
            Height="133"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <Button
            x:Name="donebtn"
            Canvas.Left="395"
            Canvas.Top="18"
            Width="74"
            Height="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="donebtn_Click"
            Content="Save"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource donebtn}" />
        <Button
            Name="cancelBtn"
            Canvas.Left="303"
            Canvas.Top="18"
            Width="74"
            Height="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="cancelBtn_Click"
            Content="Cancel"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource cancelbtn}" />
    </Canvas>
</Window>
