<UserControl
    x:Class="FYP_MS.AdvisorMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel Background="AliceBlue">
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Toolbar  -->
            <WrapPanel Margin="0,5" VerticalAlignment="Center">
                <Label Margin="10,0" Content="Search" />

                <!--  SearchBox with its own rounded‐border template  -->
                <TextBox
                    x:Name="SearchBar"
                    Width="200"
                    MinHeight="30"
                    Margin="5"
                    Padding="6,4"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    Style="{x:Null}"
                    TextChanged="SearchBar_TextChanged" />

                <!--  Action Buttons  -->
                <Button
                    x:Name="clearTxt"
                    Margin="5"
                    Click="ClearText_Click"
                    Content="Clear Text"
                    Style="{StaticResource Btntype1}" />

                <Button
                    x:Name="AddAdvisorBtn"
                    Margin="5"
                    Click="AddAvisorBtn"
                    Content="Add Advisor"
                    Style="{StaticResource Btntype1}" />

                <Button
                    x:Name="UpdateAdvBtn"
                    Margin="5"
                    Click="UpdateAdvBtnClick"
                    Content="Update Advisor"
                    Style="{StaticResource Btntype1}" />
            </WrapPanel>

            <!--  Data Grid  -->
            <DataGrid
                x:Name="Grid"
                Grid.Row="1"
                Margin="5"
                AlternatingRowBackground="{StaticResource Light Theme Text Color}"
                Background="LightGray"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                ColumnWidth="*"
                IsReadOnly="True"
                MouseDoubleClick="UpdateAdvBtnClick"
                RowBackground="LightYellow" />
        </Grid>
    </DockPanel>
</UserControl>
