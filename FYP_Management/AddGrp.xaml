<Window
    x:Class="FYP_Management.AddGrp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FYP_Management"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Stu Edit"
    Width="620"
    Height="350"
    AllowsTransparency="True"
    BorderBrush="Transparent"
    BorderThickness="10"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Effect>
        <DropShadowEffect
            BlurRadius="15"
            Direction="-90"
            RenderingBias="Quality"
            ShadowDepth="5"
            Color="Black" />
    </Window.Effect>

    <Canvas Background="{StaticResource Light Theme Text Color}">
        <Label
            Canvas.Left="6"
            Canvas.Top="24"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Search" />
        <TextBox
            Name="SearchBar"
            Canvas.Left="53"
            Canvas.Top="27"
            Width="125"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            MaxLength="100"
            Text=""
            TextChanged="SearchBar_TextChanged" />
        <Button
            x:Name="clearTxt"
            Canvas.Left="183"
            Canvas.Top="27"
            Width="70"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="clearTxt_Click"
            Content="Clear Text"
            Style="{StaticResource Btntype2}" />

        <Button
            x:Name="AddStuGroup"
            Canvas.Left="283"
            Canvas.Top="148"
            Width="28"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="UpdateStudentBtnClick"
            Content="&gt;"
            Style="{StaticResource Btntype2}" />
        <Button
            Canvas.Left="284"
            Canvas.Top="190"
            Width="27"
            Height="27"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="RemoveStu"
            Content="&lt;"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource cancelbtn}" />

        <Button
            x:Name="donebtn"
            Canvas.Left="507"
            Canvas.Top="18"
            Width="74"
            Height="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="SaveBtn_Click"
            Content="Save"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource donebtn}" />
        <Button
            Canvas.Left="414"
            Canvas.Top="18"
            Width="74"
            Height="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Button_Click"
            Content="Cancel"
            RenderTransformOrigin="0.681,-1.002"
            Style="{StaticResource cancelbtn}" />

        <DatePicker
            x:Name="Datepicker"
            Canvas.Left="142"
            Canvas.Top="69"
            Canvas.Bottom="284" />
        <Label
            Canvas.Left="10"
            Canvas.Top="69"
            Width="88"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Select Student " />
        <Label
            Canvas.Left="315"
            Canvas.Top="69"
            Width="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Selected Student " />

        <DataGrid
            Name="AllStudents"
            Grid.Row="1"
            Canvas.Left="5"
            Canvas.Top="100"
            Width="274"
            Height="225"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AlternatingRowBackground="{StaticResource Light Theme Text Color}"
            Background="LightGray"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            ColumnWidth="*"
            IsReadOnly="True"
            MouseDoubleClick="UpdateStudentBtnClick"
            RowBackground="LightYellow" />


        <DataGrid
            x:Name="SelectedStudents"
            Canvas.Left="315"
            Canvas.Top="100"
            Width="280"
            Height="225"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            AlternatingRowBackground="{StaticResource Light Theme Text Color}"
            AutoGenerateColumns="False"
            Background="LightGray"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            ColumnWidth="*"
            IsReadOnly="True"
            ItemsSource="{Binding stuList}"
            MouseDoubleClick="RemoveStu"
            RowBackground="LightYellow">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Header="Id" />
                <DataGridTextColumn Binding="{Binding firstName}" Header="First Name" />
                <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                <DataGridTextColumn Binding="{Binding RegNo}" Header="Reg No" />
            </DataGrid.Columns>
        </DataGrid>
    </Canvas>
</Window>
