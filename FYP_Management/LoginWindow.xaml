<Window
    x:Class="FYP_Management.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login - FYP Management System"
    Width="400"
    Height="400"
    FontFamily="Poppins"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">
    <Grid>
        <StackPanel Margin="30" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Admin Login" />

            <TextBlock Margin="0,10,0,5" Text="Username" />
            <TextBox x:Name="UsernameTextBox" Padding="5" />

            <TextBlock Margin="0,10,0,5" Text="Password" />
            <PasswordBox x:Name="PasswordBox" Padding="5" />

            <Button
                x:Name="LoginButton"
                Margin="0,25,0,0"
                Padding="8"
                Click="LoginButton_Click"
                Content="Login"
                IsDefault="True" />

            <TextBlock
                x:Name="ErrorTextBlock"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Foreground="Red"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>